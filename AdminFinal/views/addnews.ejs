<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>Add Newses</title>
  </head>
  <body>
    <%- include('./header') %>
    <h3 class="text-center p-2">Add News</h3>
    <div class="container">
      <form method="POST" action="/news/add">
        <div class="form-group">
          <label for="inputTitle">Title</label>
          <input type="text" required class="form-control" name="title" id="title" placeholder="Enter Title">
        </div>
        <div class="form-group">
          <label for="inputDesc">Description</label>
          <input type="text" required class="form-control" name="desc" id="desc" placeholder="Enter Description">
        </div>
        <div class="form-group">
          <label for="inputUrl">URL</label>
          <input type="url"  required class="form-control" name="url" id="url" placeholder="Enter URL">
        </div>
        <div class="form-group">
          <label for="inputImg">URL to Image</label>
          <input type="url" required class="form-control" name="img" id="img" placeholder="Enter Image URL">
        </div>
        <div class="form-group">
          <label for="inputTime">Published At</label>
          <input type="date" required class="form-control" name="CreatedOn" id="CreatedOn" placeholder="Enter Date">
        </div>
        <button type="submit" id="sub" class="btn btn-primary">Submit</button>
        <button type="reset" id="sub" class="btn btn-warning">Reset</button>
      </form>
    </div>
    <div class="modal" id="myModal" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-body" id="editModal">
            Your news has been saved!
          </div>
          <div class="modal-footer text-xs-center">
            <button type="button" id="modBtn"class="btn btn-success" data-dismiss="modal">Awesome!</button>
          </div>
        </div>
      </div>
    </div>
  <%- include('./footer') %>
  </body>
  <script>
    $("#modBtn").click(function(){
      window.stop();
    });
    $( "form" ).on( "submit", function( event ) {
      $('#myModal').modal();
    });
  </script>
</html>
